<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="75dp"
        android:layout_height="105dp"
        android:padding="3dp"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp">

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_requirement"
            android:layout_toStartOf="@+id/tv_requirement"
            android:singleLine="true"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_rarity"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/tv_rarity"
            android:layout_below="@+id/view_seaprate" />

        <TextView
            android:id="@+id/tv_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_seaprate"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/iv_rarity"
            android:layout_toRightOf="@+id/iv_rarity"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_seaprate"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/tv_rarity"
            android:layout_toRightOf="@+id/tv_rarity"
            android:singleLine="true"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_seaprate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_card_name"
            android:layout_margin="3dp"
            android:background="@color/colorSeparate" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rarity"
            android:layout_marginTop="4dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_rule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_type"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_seaprate"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp" />
    </RelativeLayout>

</LinearLayout>